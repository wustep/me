{
  "name": "wustep-me",
  "version": "1.0.0",
  "private": true,
  "description": "Stephen's personal website, built with transitive-bullshit/nextjs-notion-starter-kit",
  "author": "Stephen Wu",
  "repository": "wustep/me",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "deploy": "vercel deploy",
    "deps:upgrade": "[ -z $GITHUB_ACTIONS ] && pnpm up -L notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link": "[ -z $GITHUB_ACTIONS ] && run-s deps:link:* || echo 'Skipping deps:update on CI'",
    "deps:unlink": "[ -z $GITHUB_ACTIONS ] && pnpm add notion-client notion-types notion-utils react-notion-x || echo 'Skipping deps:update on CI'",
    "deps:link:notion-types": "pnpm link ../react-notion-x/packages/notion-types",
    "deps:link:notion-utils": "pnpm link ../react-notion-x/packages/notion-utils",
    "deps:link:notion-client": "pnpm link ../react-notion-x/packages/notion-client",
    "deps:link:react-notion-x": "pnpm link ../react-notion-x/packages/react-notion-x",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "test": "run-p test:*",
    "test:lint": "eslint .",
    "test:prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check"
  },
  "dependencies": {
    "@fisch0920/use-dark-mode": "^2.4.0",
    "@keyvhq/core": "^1.6.9",
    "@keyvhq/redis": "^1.6.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "expiry-map": "^2.0.0",
    "fathom-client": "^3.4.1",
    "got": "^12.0.3",
    "isomorphic-unfetch": "^3.1.0",
    "katex": "^0.16.27",
    "ky": "^1.8.1",
    "lqip-modern": "^2.2.1",
    "lucide-react": "^0.555.0",
    "next": "^16.1.1",
    "notion-client": "^7.7.3",
    "notion-types": "^7.7.3",
    "notion-utils": "^7.7.3",
    "p-map": "^7.0.3",
    "p-memoize": "^7.1.1",
    "posthog-js": "^1.249.4",
    "prismjs": "^1.30.0",
    "react": "^19.2.3",
    "react-body-classname": "^1.3.1",
    "react-dom": "^19.2.3",
    "react-ga": "^3.3.1",
    "react-notion-x": "^7.7.3",
    "react-tweet": "^3.2.2",
    "react-use": "^17.6.0",
    "rss": "^1.2.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@fisch0920/config": "^1.2.1",
    "@next/bundle-analyzer": "^16.1.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.5.2",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.2.7",
    "@types/react-body-classname": "^1.1.10",
    "@types/react-dom": "^19.2.3",
    "@types/rss": "^0.0.32",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "cacheable-request": {
      "keyv": "npm:@keyvhq/core@~1.6.6"
    }
  },
  "prettier": "@fisch0920/config/prettier",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --ignore-unknown --write",
      "eslint --fix"
    ]
  }
}
